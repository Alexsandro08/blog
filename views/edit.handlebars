<body id="add">
    
<div class="container card mt-5" id="cont">
    <h3 class="text-center mt-3">Edit Category</h3>
    <form action="/category/edit" method="post">
    <input type="hidden" name="id" value="{{category._id}}">
    
    <label for="iname" class="mt-5">Name: </label>
    <input type="text" name="name" id="iname" placeholder="Enter Category Name" class=" form-control mt-2" value="{{category.name}}">
    <label for="islug" class="mt-3">Slug:</label>
    <input type="text" name="slug" id="islug" placeholder="Slug Category" class="form-control mt-2" value="{{category.slug}}">
    
    <input type="submit" value="Edit category" class="btn btn-warning mt-3">
    
    
    </form>
</div>

</body>