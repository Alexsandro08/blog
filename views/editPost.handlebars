<body id="post">
<div class="card container cont">
    <div class="card-body container">
        <h1 class="text-center mb-3">Edit Post</h1>
        <form action="/posts/edit" method="post">
        <input type="hidden" name="id" value="{{posts._id}}">
            <label for="ititle">Title: </label>
            <input type="text" name="title" id="ititle" class="form-control" value="{{posts.title}}" required>
            <label for="slug" class="mt-4">Slug: </label>
              <input type="text" name="slug" id="islug" class="form-control" value="{{posts.slug}}"required>
            <label for="idescribe" class="mt-4">Describe: </label>
            <input type="text" name="describe" id="idescribe" class="form-control" value="{{posts.describe}}" required>
            <label for="content" class="mt-4">Content: </label>
            <textarea name="content" id="content" cols="30" rows="5" class="form-control" required> {{posts.content}}</textarea>
            <label for="category" class="mt-3">Category: </label>

            <select name="category" class="form-select w-25 mt-2 selected " required>
                    {{#each category}}
                        {{name}}
                        <option value="{{_id}}">{{name}}</option>
                    {{else}}
                         <option value="0">No category</option>
                    {{/each}}
            </select>

            <button type="submit" class="btn btn-warning mt-5">Edit post</button>
           

        </form>
       


    </div>

</div>

</body>