<body id="post">
<div class="card container cont">
    <div class="card-body container ">
        <h1 class="text-center mb-3">New Post</h1>
        <form action="/posts/new" method="post">
            <label for="ititle">Title: </label>
            <input type="text" name="title" id="ititle" class="form-control" required>
            <label for="slug" class="mt-4">Slug: </label>
              <input type="text" name="slug" id="islug" class="form-control" required>
            <label for="describe" class="mt-4">Describe: </label>
            <input type="text" name="describe" id="describe" class="form-control" required>
            <label for="content" class="mt-4">Content: </label>
            <textarea name="content" id="content" cols="30" rows="5" class="form-control" required></textarea>
            <label for="category" class="mt-3">Category: </label>

            <select name="category" class="form-select mt-2" id="select" required>
                    {{#each category}}
                        {{name}}
                        <option value="{{_id}}">{{name}}</option>
                    {{else}}
                         <option value="0">No category</option>
                    {{/each}}
            </select>

            <button type="submit" class="btn btn-warning mt-5">To add post</button>
           

        </form>

    </div>

</div>

</body>